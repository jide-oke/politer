{
    "name": "Politer!",
    "version": "1.1",
    "description": "Right-click to make selected text more polite.",
    "manifest_version": 3,
    "permissions": ["contextMenus", "scripting", "storage", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "options_page": "options.html"
    ,
    "icons": {
    "16": "polite.png",
    "48": "polite.png",
    "128": "polite.png"
}
  }